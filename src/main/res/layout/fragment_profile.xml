<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_230"
            android:background="@drawable/profile" />


        <TextView
            android:layout_width="@dimen/sp_70"
            android:layout_height="@dimen/sp_20"
            android:layout_alignBottom="@+id/iv_profile_pic"
            android:layout_alignParentEnd="true"
            android:background="#86050505"
            android:layout_marginBottom="@dimen/sp_5"
            android:drawableLeft="@drawable/edit"
            android:drawablePadding="@dimen/sp_10"
            android:padding="@dimen/dp_4"
            android:text="Edit"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_12">


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/edittext_pro"
                android:hint="Name"
                app:font="@{`robo_light`}"
                android:textSize="@dimen/sp_17"

                android:paddingLeft="@dimen/dp_18" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                app:font="@{`robo_light`}"
                android:textSize="@dimen/sp_17"

                android:background="@drawable/edittext_pro"
                android:hint="Email"
                android:paddingLeft="@dimen/dp_18" />


            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/edittext_pro"
                android:hint="Contact Number"
                app:font="@{`robo_light`}"
                android:textSize="@dimen/sp_17"

                android:paddingLeft="@dimen/dp_18" />


            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:font="@{`robo_light`}"
                android:textSize="@dimen/sp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/edittext_pro"
                android:hint="Address"
                android:visibility="gone"
                android:paddingLeft="@dimen/dp_18" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>